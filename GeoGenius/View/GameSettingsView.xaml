                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Margin="0,40,0,0">

                <Button x:Name="bStartGame" Width="280" Height="110" Margin="20,0,0,0"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        Click="StartGame_Click"
                        >
                    <Button.Background>
                        <ImageBrush ImageSource="/Images/bStartGame.png"/>
                    </Button.Background>
                    <Button.Tag>Flags</Button.Tag>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
          Background="{TemplateBinding Background}"
          Opacity="1">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FF8E3C16" BlurRadius="10"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" 
VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <!-- Promijeni boju kada je miš iznad dugmeta -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                    <!-- Zlatna boja -->
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                    <!-- Zlatna boja -->
                                </Trigger>

                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>


            </Grid>

        </StackPanel>

        <Button Width="50" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Back_Click"
                Margin="10">
            <Button.Background>
                <ImageBrush ImageSource="/Images/bBack.png"/>
            </Button.Background>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
          Background="{TemplateBinding Background}"
          Opacity="1">
                        <Border.Effect>
                            <DropShadowEffect Color="#FF8E3C16" BlurRadius="10"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" 
VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Promijeni boju kada je miš iznad dugmeta -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            <!-- Zlatna boja -->
