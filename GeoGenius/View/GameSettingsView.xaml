                                        <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                        <!-- Zlatna boja -->
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                        <!-- Zlatna boja -->
                                    </Trigger>

                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button x:Name="bLevel5" Width="100" BorderThickness="0" Height="100" Margin="20,0,20,0" Click="SelectLevel">
                        <Button.Background>
                            <ImageBrush ImageSource="/Images/bLevel5.png"/>
                        </Button.Background>
                        <Button.Tag>5</Button.Tag>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" 
          Background="{TemplateBinding Background}"
          Opacity="1">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#FF8E3C16" BlurRadius="10"/>
                                    </Border.Effect>
                                    <ContentPresenter HorizontalAlignment="Center" 
VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <!-- Promijeni boju kada je miš iznad dugmeta -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                        <!-- Zlatna boja -->
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                        <!-- Zlatna boja -->
                                    </Trigger>

                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Margin="0,40,0,0">
                <Image Source="/Images/levelField.png" Width="600"></Image>
                <StackPanel Orientation="Horizontal">
                    <Button Width="280" Height="110" Margin="20,0,0,0" Click="SelectGameMode">
                        <Button.Background>
                            <ImageBrush ImageSource="/Images/bFlagsOption.png"/>
                        </Button.Background>
                        <Button.Tag>Flags</Button.Tag>
                        <Button.Template>
